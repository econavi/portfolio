.components-list .proportional-block
	display block
	
	&__wrapper
		position relative
		
		display block
		padding-top 100%
		
		&_1x2
			padding-top 50%
			
		&_4x3
			padding-top 75%
			
		&_16x9
			padding-top 56.25%
	
	&__content
		position absolute
		top 0
		left 0
		
		width 100%
		height 100%



/* =======================================
		Внутренние стили для текущего проекта 
	 ======================================= */

.components-list .proportional-block
	display inline-block
	width 20%
	margin-right 15px
	background rgba(#000, 0.6)
	
	&:last-child
		margin-right 0
	
	&__content
		span
			position absolute
			top 50%
			left 50%
			$setResponsiveFont(14, 26, 320, 1600)
			color #fff
			transform translate(-50%, -50%)
			
