$colorPointer = #641b2f

.icon-pointer
	position relative
	
	width 100%
	height 100%
	
	background transparent
	
	&::after
		content ''
		position absolute
		top 50%
		left 50%
		
		width 20px
		height 20px
		
		border-right 2px solid $colorPointer
		border-bottom 2px solid $colorPointer
		background transparent
		
		cursor pointer
		
	&:hover::after
		border-color lighten($colorPointer, 20%)
	
	&:active::after
		border-color $colorPointer
		
	&__down
		&::after
			transform translate(-50%, -75%) rotate(45deg)
	
	&__up
		&::after
			transform translate(-50%, -25%) rotate(225deg)
		