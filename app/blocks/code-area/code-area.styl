$fontSize = 1.5rem

$codeArea_color_bg = #f5f5f5
$codeHeader_color = #fff


.code-area
	position relative
	
	margin-bottom 20px
	
	font-size $fontSize
	
	color #444
	background darken($codeArea_color_bg, 10%)
	border 2px solid darken($codeArea_color_bg, 20%)
	border-radius 2px
	
	box-shadow inset 0 0 5px darken($codeArea_color_bg, 20%)
	
	&:first-child
		margin-top 15px

	&:last-child
		margin-bottom 30px
	
	&__header
		position relative
		top 0
		right 0
		left 0
		display block
		
		padding 4px 8px
		margin-top -2px		
		margin-right -2px
		margin-left -2px
		
		color $codeHeader_color
		background #641b2f
		border-top-left-radius 2px
		border-top-right-radius 2px
	
	&__code-self 
		pre
			overflow-x auto
			padding 20px 10px


