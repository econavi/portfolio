$colorItem = #f5f5f5

$colorCard_bg = $light
$colorCard_border = $gray
$colorCard_shadow = $gray_darken

$gradientToggle_first = $gray_lighten
$gradientToggle_second = $gray

$colorToggleIndicator = $colorSecond

.sliding-card
	position relative
	
	padding 3% 5%
	padding-bottom 40px
			
	background $colorCard_bg
	border 1px solid $colorCard_border
	border-radius 5px
	
	box-shadow 0 1px 3px $colorCard_shadow
	
	&__hidden-content
		display none
		
		&_show
			display block
	
	/* Переключатель */
	&__toggle
		position absolute
		bottom -1px
		left 0
		right 0

		height 40px
		
		background linear-gradient($gradientToggle_first, $gradientToggle_second)
		border-bottom-right-radius 5px
		border-bottom-left-radius 5px
		cursor pointer
		
		&:hover
			background linear-gradient((darken($gradientToggle_first, 10%)), 
				(darken($gradientToggle_second, 20%)))
			
		/* Индикатор */
		&::after
			content ''
			position absolute
			top 50%
			left 50%
			
			width 20px
			height 20px
			
			border-right 2px solid $colorToggleIndicator
			border-bottom 2px solid $colorToggleIndicator
			background transparent
			
			cursor pointer
			
		&:hover::after
			border-color lighten($colorToggleIndicator, 30%)
			
		&_down
			&::after
				transform translate(-50%, -75%) rotate(45deg)

		&_up
			&::after
				transform translate(-50%, -25%) rotate(225deg)